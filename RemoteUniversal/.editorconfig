# ===========================================
# RemoteUniversal - .editorconfig Configuration
# ===========================================
# Configuration standardisée pour tous les éditeurs
# Auteur: Jean Elie
# Date: 2025

# ===========================================
# CONFIGURATION GLOBALE
# ===========================================
root = true

# ===========================================
# TOUS LES FICHIERS
# ===========================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# ===========================================
# FICHIERS MARKDOWN
# ===========================================
[*.md]
trim_trailing_whitespace = false

# ===========================================
# FICHIERS JSON
# ===========================================
[*.json]
indent_size = 2

# ===========================================
# FICHIERS YAML
# ===========================================
[*.{yml,yaml}]
indent_size = 2

# ===========================================
# FICHIERS GRADLE
# ===========================================
[*.gradle]
indent_size = 4

# ===========================================
# FICHIERS XML
# ===========================================
[*.xml]
indent_size = 2

# ===========================================
# FICHIERS DE CONFIGURATION
# ===========================================
[*.{ini,cfg,conf}]
indent_size = 4

# ===========================================
# FICHIERS DOCKER
# ===========================================
[Dockerfile*]
indent_size = 4

# ===========================================
# FICHIERS SHELL
# ===========================================
[*.{sh,bash}]
indent_size = 4

# ===========================================
# FICHIERS BATCH WINDOWS
# ===========================================
[*.{bat,cmd}]
end_of_line = crlf
